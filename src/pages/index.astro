---
import Logotype from "../components/logotype.astro"
import Manu from "../components/manu.astro"
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Damian Szalimow - personal profile</title>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Electrolize&family=Parkinsans:wght@300..800&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

	</head>
	<body>
		<Logotype></Logotype>
		<Manu></Manu>
	</body>
</html>

<style is:global>
*,
*::before, 
*::after {
	box-sizing:border-box;
	padding: 0;
	margin: 0px;
}

h1,
h2,
h3, 
h4, 
p {
	margin:0;
	font-family: "Electrolize", sans-serif;
	font-weight: 500;
	font-style: normal;
}
li {
	text-wrap: pretty;
}


img {
	max-width: 100%;
	display: block;
}
button {
    all: unset; 
    background: none; 
    border: none; 
    padding: 0; 
    font: inherit; 
    color: inherit;
    cursor: pointer; 
}

button::after{
    display: none;
}

:root {
	--clr-natural-100: hsl(48,71%,99%);
	--clr-natural-200: hsl(237,20%,80%);
	--clr-natural-400: hsl(252,2%,41%);
	--clr-natural-800: hsl(240,100%,5%);
	--clr-natural-900: hsl(238,92%,5%);

	--fw-regular: ??;
	--fw-semi-bold: ??;
	--fw-bold: ??;
	--fs-400: 1rem;
	--fs-500: 1.25rem;
	--fs-600: 1.5rem;
	--fs-700: 2rem;
	--fs-800: 2.5rem;
	--fs-900: 3rem;
}

body{
    background-image: linear-gradient(to right, rgba(104,138,187,255) , rgba(132,160,199,255));
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}
</style>
